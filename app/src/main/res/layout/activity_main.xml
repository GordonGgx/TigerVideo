<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/video_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.tumblr.video.ui.recycler.CommonRecyclerView
                android:id="@+id/video_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.tumblr.video.ui.recycler.CommonRecyclerView>

            <!-- 小窗口播放容器 -->
            <RelativeLayout
                android:id="@+id/small_video_player_container"
                android:layout_width="@dimen/d_160"
                android:layout_height="@dimen/d_90"
                android:background="@drawable/small_video_player_bg"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_video_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_video_close"
                    android:layout_margin="@dimen/d_3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
